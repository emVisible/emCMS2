generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model course {
  id    Int    @id @default(autoincrement()) @db.UnsignedInt
  c_id  String @db.Text
  name  String @db.Text
  redit Int
  hours Int

  teacher   teacher @relation(fields: [teacherId], references: [t_id], onDelete: Cascade)
  teacherId String
}

model teacher {
  id     Int    @id @default(autoincrement()) @db.UnsignedInt
  t_id   String @unique
  name   String @db.Text
  gender String @db.Text
  title  String @db.Text

  course course[]
}

model student {
  id     Int    @id @default(autoincrement()) @db.UnsignedInt
  s_id   String @db.Text
  name   String @db.Text
  gender String @db.Text

  classes   classes @relation(fields: [classesId], references: [cl_id], onDelete: Cascade)
  classesId String
}

model classes {
  id      Int       @id @default(autoincrement()) @db.UnsignedInt
  cl_id   String    @unique
  name    String    @db.Text
  remark  String    @db.Text
  student student[]
}

model relations {
  id    Int    @id @default(autoincrement()) @db.UnsignedInt
  c_id  String @db.Text
  cl_id String @db.Text
}
